<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navgraph"
    app:startDestination="@id/propertiesListFragment">

    <fragment
        android:id="@+id/propertiesListFragment"
        android:name="com.example.casaya.fragments.PropertiesListFragment"
        android:label="fragment_properties_list"
        tools:layout="@layout/fragment_properties_list">
        <action
            android:id="@+id/action_propertiesListFragment_to_propertyDetailFragment"
            app:destination="@id/propertyDetailFragment" />
        <action
            android:id="@+id/action_propertiesListFragment_to_userProfileFragment"
            app:destination="@id/userProfileFragment" />

    </fragment>

    <fragment
        android:id="@+id/propertyDetailFragment"
        android:name="com.example.casaya.fragments.PropertyDetailFragment"
        android:label="fragment_property_detail"
        tools:layout="@layout/fragment_property_detail" >

    </fragment>

    <fragment
        android:id="@+id/publishPropertyFragment"
        android:name="com.example.casaya.fragments.PublishPropertyFragment"
        android:label="fragment_publish_property"
        tools:layout="@layout/fragment_publish_property">
        <action
            android:id="@+id/action_publishPropertyFragment_to_propertiesListFragment"
            app:destination="@id/propertiesListFragment">

        </action>
        <action
            android:id="@+id/action_publishPropertyFragment_to_userPropertiesFragment"
            app:destination="@id/userPropertiesFragment" />
        <action
            android:id="@+id/action_publishPropertyFragment_to_containerProfileFragment"
            app:destination="@id/containerProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/userProfileFragment"
        android:name="com.example.casaya.fragments.UserProfileFragment"
        android:label="fragment_user_profile"
        tools:layout="@layout/fragment_user_profile" />
    <fragment
        android:id="@+id/containerProfileFragment"
        android:name="com.example.casaya.fragments.ContainerProfileFragment"
        android:label="fragment_container_profile"
        tools:layout="@layout/fragment_container_profile" >
        <action
            android:id="@+id/action_containerProfileFragment_to_publishPropertyFragment"
            app:destination="@id/publishPropertyFragment" />
        <action
            android:id="@+id/action_containerProfileFragment_to_loginActivity"
            app:destination="@id/loginActivity" />
    </fragment>
    <fragment
        android:id="@+id/userPropertiesFragment"
        android:name="com.example.casaya.fragments.UserPropertiesFragment"
        android:label="fragment_user_properties"
        tools:layout="@layout/fragment_user_properties" >
        <action
            android:id="@+id/action_userPropertiesFragment_to_publishPropertyFragment"
            app:destination="@id/publishPropertyFragment" />
    </fragment>
    <fragment
        android:id="@+id/menu_dashboard"
        android:name="com.example.casaya.fragments.DashboardFragment"
        android:label="fragment_dashboard"
        tools:layout="@layout/fragment_dashboard" />
    <activity
        android:id="@+id/loginActivity"
        android:name="com.example.casaya.LoginActivity"
        android:label="activity_login"
        tools:layout="@layout/activity_login" />

</navigation>