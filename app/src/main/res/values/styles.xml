<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="AppTheme.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@color/white</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:maxWidth">200dp</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:popupBackground">@drawable/spinner_dropdown_background</item>
        <item name="android:dropDownSelector">@drawable/arrow_down</item>
    </style>


</resources>